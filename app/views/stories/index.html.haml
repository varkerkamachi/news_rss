%section
  %h1="Reddit News RSS Reader"

  .config_area
    %p
      Set refresh options
      %label
        %strong="Refresh:"
        %label
          disabled
          =radio_button_tag "refresh_enabled", "false", checked=true
        %label
          enabled
          =radio_button_tag "refresh_enabled", "true"

      =select_tag :refresh_interval, options_for_select([["Interval", 0],["30 seconds", 30000],["60 seconds", 60000],["5 minutes", 300000],["10 minutes", 600000]]), disabled: 'disabled', onchange: "setInterval(this.value);"

  %p.info="Select favorites with a star"

  - if @data.present?
    %ul
      - @data.each do |record|
        %li.clearfix{ id: "#{record.id}" }
          = render_favorite_stars record
          .date_time_source.left
            = record.story_date.localtime.strftime('%Y-%m-%d %l:%M:%S%P %Z')
            %br
            = print_source record

          = generate_story_title_and_link record
